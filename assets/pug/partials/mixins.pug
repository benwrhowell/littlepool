mixin slide(title, subtitle, image, link)

  - var title = title || ' BIG TITLE'
  - var subtitle = subtitle || ' Subtitle & more information'
  - var image = image || 'amps.jpg'
  - var link = link || '#'
  .slide-box(style="background-image: url('media/banner/" + image + "');" )
    .slide-cover-wrap
    .slide-content
      .slide-content-wrap
        p.title.is-1= title
        p.subtitle= subtitle
        a.button(href="/" + link) More
