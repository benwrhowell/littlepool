mixin card-info(title, size, img)
  .card.compact-card.hoverable
    .card-image
      figure.image.is-4by3
        img(src='media/' + img, alt='Placeholder image')
    .card-content
    
      .content
        p.title.margin.is-4= title
        p.subtitle.is-6= size
        a.button.is-small.modal-button
          span.icon
            i.icon-info
          span More
        .modal
          .modal-background
          .modal-content
            p.image.is-4by3
              img(src='media/rooms/room1.jpg', alt='')
          button.modal-close.is-large(aria-label='close')

